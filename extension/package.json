{
  "name": "copilot-clone",
  "displayName": "copilotClone-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.4"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Copilot Clone",
        "properties": {
          "copilot-clone.general.modelSelection": {
            "type": "string",
            "enum": [
              "Nick's Website",
              "ChatGPT",
              "DeepSeek"
            ],
            "default": "Nick's Website",
            "description": "Select which LLM used for suggestions.",
            "group": "general"
          },
          "copilot-clone.model.temperature": {
            "type": "number",
            "default": 0.5,
            "minimum": 0,
            "maximum": 2,
            "description": "Temperature value the model will use.",
            "group": "model"
          },
          "copilot-clone.model.topK": {
            "type": "number",
            "default": 0,
            "minimum": 0,
            "maximum": 100,
            "description": "Top K value the model will use.",
            "group": "model"
          },
          "copilot-clone.debug.AIEndpoint": {
            "type": "string",
            "default": "https://ai.nickrucinski.com/suggestion",
            "description": "The endpoint the extension will fetch suggestions from.",
            "group": "debug"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "copilotClone.testFetch",
        "title": "Debug: Test Fetch Suggestions"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.8",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "typedoc-theme-hierarchy": "^5.0.4"
  }
}
